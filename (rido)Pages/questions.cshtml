<style>
    .container-border {
        border: 2px solid #ddd; /* Add your preferred border color */
        border-radius: 10px; /* Add border-radius for rounded corners */
        padding: 20px; /* Add padding for spacing inside the container */
        margin-top: 20px; /* Add margin for spacing between the container and other elements */
    }
</style>

<div class="container container-border">
    <div class="row">
        <!-- Form Column -->
        <div class="col-md-6">
            <form method="post">
                    <div class="form-group">
                        <label for="Riddle">Riddle</label>
                        <select class="form-control" id="riddles" name="riddle_id">
                            <option value="">Select Riddle type</option>
                            @foreach (var item in Model.riddlelist)
                            {
                                <option value="@item.riddel_id">@item.riddel_name</option>
                            }
                        </select>
                    </div>
                <br /><br />
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Question</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword" name="question" placeholder="Riddle Id">
                    </div>
                </div>
                <br /><br />
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Option 1</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword" name="Option1" placeholder="Riddle Id">
                    </div>
                </div>
                <br /><br />
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Option 2</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword" name="Option2" placeholder="Riddle Id">
                    </div>
                </div>
                <br /><br />
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Option 3</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword" name="Option3" placeholder="Riddle Id">
                    </div>
                </div>
                <br /><br />
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Correct Answer</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword" name="correct" placeholder="Riddle Name">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Submit Question</button>
                    </div>
                </div>
            </form>
        </div>

       
        <div class="col-md-6">
            <table class="table table-hover table-dark">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Riddel Id</th>
                        <th scope="col">Question</th>
                        <th scope="col">Option 1</th>
                        <th scope="col">Option 2</th>
                        <th scope="col">OPtion 3</th>
                        <th scope="col">Correct</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var item in Model.questionList)
                        {
                            <tr>
                                <td>@item.id</td>
                                <td>@item.qst</td>
                                <td>@item.opt1</td>
                                <td>@item.opt2</td>
                                <td>@item.opt3</td>
                                <td>@item.correct</td>

                                <td>
                                    <a class="btn btn-primary btn-sm" href="RR/EditRiddle?id=@item.id">Edit</a>
                                    <a class="btn btn-danger btn-sm" href="RR/DeleteRiddle?id=@item.id">Delete</a>
                                </td>
                            </tr>

                        }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
