<style>
    .container-border {
        border: 2px solid #ddd; 
        border-radius: 10px; 
        padding: 20px;
        margin-top: 20px; 
    }
</style>

<div class="container container-border">
    <div class="row">
        <!-- Form Column -->
        <div class="col-md-6">
            <form method="post">
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Id</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword" name="id" placeholder="Riddle Id">
                    </div>
                </div>
                <br /><br />
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Riddle Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword" name="name" placeholder="Riddle Name">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Submit Riddel</button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Table Column -->
        <div class="col-md-6">
            <table class="table table-hover table-dark">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                <tbody>
                        @foreach (var item in Model.riddlelist)
                        {
                        <tr>
                            <td>@item.riddel_id</td>
                            <td>@item.riddel_name</td>
                           
                            <td>
                                <a class="btn btn-primary btn-sm" href="RR/EditRiddle?id=@item.riddel_id">Edit</a>
                                <a class="btn btn-danger btn-sm" href="RR/DeleteRiddle?id=@item.riddel_id">Delete</a>
                            </td>
                        </tr>

                        }
                </tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
