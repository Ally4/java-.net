@page
@model Riddels.Pages.RR.EditRiddleModel
@{
}
<h2>Edit riddle</h2>


<form method="POST">
    <input type="hidden" name="id" value="@Model.riddleInfo.riddel_id"/>
    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.riddleInfo.riddel_name" />
        </div>
    </div>
   
    <div class="offset-sm-3 col-sm-3 d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <div class="offset-sm-3 col-sm-3 d-grid">
        <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
    </div>
  
</form>